@page

@model IndexModel
@{
ViewData["Title"] = "Home page";
}

<div class="img-figure text-center">
    <h2 class="header">Welcome To Carpentry Shop </h2>
    <img style="width: 100%; max-width: 25rem" src="~/fig-1.png" />
</div>

<div class="ui container why">

    <form id="invoice-form" method="post" class="ui form error">
        <partial name="Partials/_items" />

        <div style="margin-top: 50px;">
            <h4 class="ui dividing header">
                <i class="user icon"></i>
                <div class="content">
                    Customer
                </div>
            </h4>
            <div class="customer-info three fields">
                <div class="field">
                    <label>Requested By <span class="required">*</span></label>
                    <input id="name" type="text" asp-for="Customer.Name" maxlength="255" placeholder="Enter your name">
                </div>
                <div class="field">
                    <label>Department Name <span class="required">*</span> </label>
                    <input type="text" asp-for="Customer.Department" maxlength="255" placeholder="Enter Department">
                </div>
                <div class="field">
                    <label>Email <span class="required">*</span></label>
                    <input type="email" asp-for="Customer.Email" maxlength="255" placeholder="Enter your email">
                </div>
                <!-- <div class="field"> -->
                <!--     <label>Required Date <span class="required">*</span> </label> -->
                <!--     <input type="text" asp-for="Order.ExpectedDate" class="datepicker" maxlength="255" placeholder="Select Date"> -->
                <!-- </div> -->

            </div>
        </div>


        <div class="py-5">
            <button id="generate" class="fluid ui button primary">
                Create Order
            </button>
        </div>

    </form>

</div>



<script>
    $('.ui.form')
        .form({
            fields: {
                number: {
                    identifier: 'data-validate-number',
                    rules: [
                        {
                            type: 'decimal',
                            prompt: 'Please enter a valid e-mail'
                        }
                    ]
                },
            }
        });

</script>
